@{
    ViewData["Title"] = "Delete Category";
}
@model Category

<form method="post">
    <input asp-for="Id" hidden />
    <div class="p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-danger text-md-start text-sm-center">DELETE CATEGORY</h2>
            <h4 class="text-warning text-md-start text-sm-center">This cannot be undone</h4>
        </div>
        <div class="row pt-2 pb-2 col-md-6">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" type="text" class="form-control" disabled />
        </div>
        <div class="row pt-2 pb-2 col-md-6">
            <label asp-for="DisplayOrder" class="p-0"></label>
            <input asp-for="DisplayOrder" class="form-control" disabled/>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete Record</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-primary form-control"> Back to List</a>
            </div>
        </div>


    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
