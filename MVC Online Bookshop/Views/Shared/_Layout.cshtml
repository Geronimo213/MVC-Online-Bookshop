@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <title>@ViewData["Title"] - Ye Olde Bookshop</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-Litera.min.css"/>
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
        <link rel="stylesheet" href="~/MVC Online Bookshop.styles.css" asp-append-version="true"/>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
        <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css"/>
        <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet"/>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css"/>
        @await RenderSectionAsync("Styles", false)
    </head>
    <body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-toggleable-sm bg-primary py-3" data-bs-theme="dark" border-bottom box-shadow mb-3>
            <div class="container-fluid d-flex flex-nowrap">
                <a class="navbar-brand" asp-area="Customer" asp-controller="Home" asp-action="Index">Ye Olde Bookshop <i class="bi bi-book"></i></a>
                <div class="container-fluid mx-auto px-4 d-inline d-lg-none">
                    <partial name="_SearchPartial"/>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-around" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path == "/" ? "active" : "")" asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item dropdown ">
                            <a class="nav-link dropdown-toggle @(Context.Request.Path.StartsWithSegments("/Customer/Home/Shop") ? "active" : "")" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Browse
                            </a>
                            <ul class="dropdown-menu p-1">
                                @await Component.InvokeAsync("Sidebar", new { displayBadges = false })
                            </ul>
                        </li>

                        @if (User.IsInRole(SD.RoleAdmin) || User.IsInRole(SD.RoleEmployee))
                        {
                            <partial name="_ManageContentPartial"/>
                        }

                        @* <li class="nav-item">
                                <a class="nav-link @(Context.Request.Path == "/Customer/Home/Privacy"? "active":"")" asp-area="Customer" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li> *@
                    </ul>
                    <div class="container-fluid mx-5 px-4 d-none d-lg-inline">
                        <partial name="_SearchPartial"/>
                    </div>
                    <partial name="_LoginPartial"/>
                    @await Component.InvokeAsync("ShoppingCart")
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Notification"/>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2023 - Geronimo Design - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.tiny.cloud/1/2ewupqynbfix7nj1m6dcobl5ub0qcn03vjog34v5ofd7boug/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    @await RenderSectionAsync("Scripts", false)
    </body>
</html>