@{
    ViewData["Title"] = "Delete Category";
}
@model Category


<div class="card shadow border-0 mt-4 mb-5 col-9 offset-2">
    <div class="card-header">
        <div class="row col-12 text-center">
            <h2 class="text-danger">Delete Category</h2>
            <h4 class="text-warning">This cannot be undone</h4>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" onsubmit="return confirm('Are you sure you want to delete category @Model.Name?');">
            <div class="p-3">

                <div class="mt-2 row col-sm-12 col-md-6 offset-md-3 form-floating">
                    <input asp-for="Name" type="text" class="form-control" disabled/>
                    <label asp-for="Name" class=""></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mt-2 mb-3 col-sm-12 col-md-6 offset-md-3 form-floating">
                    <input asp-for="DisplayOrder" class="form-control" disabled/>
                    <label asp-for="DisplayOrder" class=""></label>
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-sm-6 col-md-3 offset-md-3">
                        <button type="submit" class="btn btn-outline-danger form-control">Delete</button>
                    </div>
                    <div class="col-sm-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary form-control">Back</a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
