@model List<Product>;
@{
    ViewData["Title"] = "Products";
}

<div class="card shadow mt-4 mb-4">
    <div class="row pt-4 pb-3 m-0 card-header border-0 shadow-none">
        <div class="col-6">
            <h2 class="text-primary">Books</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Admin" asp-controller="Product" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle-fill"></i> Book</a>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-striped w-100 ">
            <thead>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Author
                    </th>
                    <th>
                        ISBN
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Price ($)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model.OrderBy(u => u.Id)) {
                <tr>
                    <td>@obj.Title</td>
                    <td>@obj.Author</td>
                    <td>@obj.ISBN</td>
                    <td>@string.Join(string.Empty, obj.Description.Take(250)) . . .</td>
                    <td>@obj.Price</td>
                    <td class="text-sm-center align-middle">
                        <div class=" btn-group" role="group">
                            <a asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-fill"></i> Edit</a>
                            <a asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash3-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>}
            </tbody>
        </table>
    </div>

</div>
