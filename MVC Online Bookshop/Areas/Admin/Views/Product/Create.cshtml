@{
    ViewData["Title"] = "Create Book";
}
@model Product

<div class="card shadow border-0 mt-4 mb-5 col-9 offset-2">
    <div class="card-header">
        <div class="row col-12 text-center">
            <h2 class="text-primary">Create Category</h2>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="p-3">

                <div class="mt-2 row col-sm-12 col-md-6 offset-md-3 form-floating">
                    <input asp-for="Title" type="text" class="form-control" />
                    <label asp-for="Title" class=""></label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mt-2 mb-3 col-sm-12 col-md-6 offset-md-3 form-floating">
                    <input asp-for="Author" class="form-control"/>
                    <label asp-for="Author" class=""></label>
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="mt-2 mb-3 col-sm-12 col-md-6 offset-md-3 form-floating">
                    <textarea asp-for="Description" class="form-control" style="height: 10rem"></textarea>
                    <label asp-for="Description" class=""></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mt-2 mb-3 col-sm-12 col-md-6 offset-md-3 form-floating">
                    <input asp-for="ISBN" class="form-control" />
                    <label asp-for="ISBN" class=""></label>
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="mt-2 mb-3 col-sm-12 col-md-6 offset-md-3 form-floating">
                    <input asp-for="Price" class="form-control" />
                    <label asp-for="Price" class=""></label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-sm-6 col-md-3 offset-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-sm-6 col-md-3">
                        <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-outline-primary form-control">Back</a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}