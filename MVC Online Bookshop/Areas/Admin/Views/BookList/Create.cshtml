@model BookList
@{
    ViewData["Title"] = "Create Book List";
}

<div class="card shadow mt-4 mb-4">
    <div class="row py-2 m-0 card-header border-0 shadow-none">
        @if (Model.Id != 0)
        {
            <div class="float-start col-1">
            @* Back Button *@
            <a class="btn btn-outline-danger btn-lg px-3" asp-controller="BookList" asp-action="Edit" asp-route-id="@Model.Id">Back</a>
            </div>
        }
       
        <div class="col-10 text-center">
            <h2 class="text-primary">@(Model.Id == 0 ? "New Book List" : "List Settings")</h2>
        </div>
    </div>
    <div class="card-body d-flex justify-content-center text-center">
        <form method="post" asp-area="Admin" asp-controller="BookList" asp-action="Create">
            <h5>Let's give your list a name</h5>
            <div class="form-floating" m-2>
                <input asp-for="Name" class="form-control" type="text" placeholder="List Name"/>
                <label asp-for="Name"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <input type="submit" class="btn btn-lg btn-primary m-3" value="@(Model.Id == 0 ? "Create and Add books" : "Save changes")"/>
        </form>
    </div>

</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
    
}
