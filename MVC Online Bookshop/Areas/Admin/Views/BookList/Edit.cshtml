@model BookListVM
@{
    ViewData["Title"] = "Editing " + @Model.List.Name;
}

<div class="card shadow mt-4 mb-4">
    <div class="row py-2 m-0 card-header border-0 shadow-none">
        <div class="col-6">
            <h2 class="text-primary">@Model.List.Name</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="BookList" asp-action="Create" asp-route-id="@Model.List.Id" class="btn btn-primary"><i class="bi bi-gear-fill"></i></a>
        </div>
    </div>
    <div class="card-body">
        @foreach (var book in Model.List.Books)
        {
            <div class="d-flex justify-content-start gap-4 mb-3">
                <div>
                    <img src="~/@book.ImageURL" class="img-thumbnail" style="max-width: @(SD.CoverWidth / 2)px;" alt="@($"{book.Title} by {book.Author}")" />
                </div>
                
                <div class="my-auto">
                    <h5 class="text-primary">@book.Title</h5><br/>
                    <h5 class="text-secondary-emphasis">@book.Author</h5><br/>
                    <h5 class="text-secondary">@book.ISBN</h5><br/>
                </div>

            </div>
        }
        <h5 class="text-primary mt-3">Add a new book</h5>
        <form method="post" asp-area="Admin" asp-controller="BookList" asp-action="Edit">
            <input asp-for="List.Id" hidden/>
            <div class="d-flex flex-row gap-2 m-3 p-3">
                <select class="form-select" asp-for="NewBookId" data-placeholder="Search Title, Author, ISBN"></select>
                <input type="submit" class="btn btn-success" value="Add book" />
            </div>
            
        </form>
    </div>

</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />


    <script>
        $(document).ready(function () {
            $(".form-select").select2({
                theme: 'bootstrap-5',
                placeholder: $(this).data('placeholder'),
                closeOnSelect: true,
                allowClear: false,
                minimumInputLength: 2,
                ajax: {
                    delay: 250,
                    url: '/book-list',
                    data: function (params) {
                        return {
                            q: params.term// search term
                        };
                    },
                    processResults: function (data) {
                        return {
                            results: data.items
                        }
                    },
                }
            });
        });
    </script>

}