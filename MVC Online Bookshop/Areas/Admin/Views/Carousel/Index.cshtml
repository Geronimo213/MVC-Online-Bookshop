@using Bookshop.DataAccess.Repository
@model List<Carousel>
@{
    ViewData["Title"] = "Front Page Management";
    int? currentPageSize = (int?)ViewData["CurrentPageSize"];
}

<div class="card shadow mt-4 mb-4">
    <div class="row py-2 m-0 card-header border-0 shadow-none">
        <div class="col-6">
            <h2 class="text-primary">Carousels</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Carousel" asp-action="Upsert" class="btn btn-primary"><i class="bi bi-plus-circle-fill"></i> Category</a>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-striped w-100 ">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Category/Tag</th>
                    <th>Sort Order</th>
                    <th>Display Order</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var carousel in Model)
                {
                    <tr>
                        <td>@carousel.Title</td>
                        <td>@carousel.Category.Name</td>
                        <td>@carousel.SortOrder</td>
                        <td>@carousel.DisplayOrder</td>
                        <td class="text-sm-center">
                            <div class=" w-75 btn-group" role="group">
                                <a asp-controller="Carousel" asp-action="Upsert" asp-route-id="@carousel.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-fill"></i> Edit</a>
                                <a asp-controller="Carousel" asp-action="Delete" asp-route-id="@carousel.Id" class="btn btn-danger mx-2"><i class="bi bi-trash3-fill"></i> Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

</div>

