@model List<ShoppingCart>
@{
    ViewData["Title"] = "Cart";
    double total = 0;
}
<div class="row justify-content-center m-0 p-0">
    <div class="card shadow px-0 mx-0 mt-4 mb-4 w-75">
        <div class="row card-header shadow-none p-0 m-0">
            <div class="col-6">
                <h2 class="text-primary">Shopping Cart</h2>
            </div>
            <div class="col-6 text-end">
                @* <a asp-controller="Home" asp-action="Cate" class="btn btn-primary"><i class="bi bi-plus-circle-fill"></i> Category</a> *@
            </div>
        </div>
        <div class="card-body row justify-content-center text-center">
            <table class="table table-striped table-responsive">
                <thead>
                <tr>
                    <th class="text-start">
                        Category Name
                    </th>
                    <th>
                        Amount
                    </th>
                    <th class="text-end">
                        Price / Book
                    </th>
                </tr>
                </thead>
                <tbody>
                @foreach(var obj in Model.OrderBy(u => u.Product.Title))
                {
                    total += Math.Round(obj.Count * obj.Product.Price ?? 0, 2);
                    <tr>
                        <td class="text-start">@obj.Product.Title</td>
                        <td>@obj.Count</td>
                        <td class="text-end">@obj.Product.Price</td>
                    </tr>}
                <tr>
                    <td colspan="2"></td>
                    <td class="text-end text-primary">@total.ToString("c")<br/>
                            <button class="mt-2 btn btn-success">Checkout</button>
                        </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
