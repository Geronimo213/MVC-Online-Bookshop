            <div class="col-6">
                <h2 class="text-primary">Shopping Cart</h2>
            </div>
            <div class="col-6 text-end">
                @* <a asp-controller="Home" asp-action="Cate" class="btn btn-primary"><i class="bi bi-plus-circle-fill"></i> Category</a> *@
            </div>
        </div>
